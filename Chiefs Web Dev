    <script>
        function showPage(pageId) {
            // Hide all pages
            var pages = document.querySelectorAll('.page');
            pages.forEach(function(page) {
                page.classList.remove('active');
            });

            // Show the selected page
            var activePage = document.getElementById(pageId);
            activePage.classList.add('active');
        }

        function toggleStats(statsId) {
            // Toggle the stats dropdown visibility
            var stats = document.getElementById(statsId);
            stats.style.display = (stats.style.display === "block") ? "none" : "block";
        }
    </script>

